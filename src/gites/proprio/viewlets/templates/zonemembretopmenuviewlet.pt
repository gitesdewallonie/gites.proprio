<div id="maj-info"
     tal:condition='viewlet/isVisible'
     tal:define="portal_url context/@@plone_portal_state/portal_url">
    <h2>Mise à jour des infos personnelles</h2>
    <div id="proprio-maj-info-menu">
        <a href=""
           tal:attributes="href string:${portal_url}/zone-membre/proprio-info">
           Mes données personnelles
        </a>
    </div>
    <div id="proprio-configuration-calendrier">
        <a href=""
           tal:condition="not: viewlet/isBlocked"
           tal:attributes="href string:${context/@@plone_portal_state/portal_url}/zone-membre/calendrier/configuration">
           Configuration du calendrier
        </a>
        <span tal:condition="viewlet/isBlocked">
            Votre calendrier est bloqué. Veuillez contacter les Gîtes de Wallonie.
        </span>
    </div>
    <div id="proprio-aide">
        <a href=""
           tal:attributes="href string:${context/@@plone_portal_state/portal_url}/zone-membre/calendrier/aide">
           Aide
        </a>
    </div>
</div>


<div id="calendrier-zone-proprio"
     tal:condition='viewlet/isVisible'
     tal:define="portal_url context/@@plone_portal_state/portal_url;
                 hasActiveCalendar viewlet/hasActiveConfiguration;
                 isBlocked viewlet/isBlocked;
                 showCalendar python: hasActiveCalendar and not isBlocked">
    <h2>Hébergement</h2>
    <table id="proprio-table-hebergement">
        <thead>
            <th>Hébergement</th>
            <th>Les données</th>
            <th>Calendrier</th>
            <th>Galerie photos</th>
        </thead>
        <tbody>
            <tal:boucle tal:repeat="gite viewlet/getGitesForProprio">
                <tr>
                    <td>
                        <b tal:replace="gite/title"/>
                    </td>
                    <td>
                        <a href=""
                           tal:attributes="href string:${portal_url}/zone-membre/hebergement-info?hebPk=${gite/token}">
                           ici
                         </a>
                    </td>
                    <td>
                        <a href=""
                           tal:condition="showCalendar"
                           tal:attributes="href string:${context/@@plone_portal_state/portal_url}/zone-membre/calendrier/month.html?pk=${gite/token};">
                           ici
                        </a>
                    </td>
                    <td>    
                        <a href=""
                           tal:attributes="href string:${portal_url}/zone-membre/gallery-info?hebPk=${gite/token}">
                           ici
                        </a>
                    </td>
                </tr>
            </tal:boucle>
        </tbody>
    </table>
    <div id="proprio-affichage-mensuel"
         tal:condition="showCalendar">
        <a href=""
           class="tile"
           title="Affichage mensuel"
           tal:attributes="href string:${context/@@plone_portal_state/portal_url}/zone-membre/calendrier/multical.html">
           Affichage mensuel du calendrier
        </a>
    </div>
    <div class="break-float"></div>
    
    
</div>
